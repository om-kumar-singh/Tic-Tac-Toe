<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium"
    android:background="@color/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:textColor="@color/on_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_medium" />

    <LinearLayout
        android:id="@+id/welcomeContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_large"
        android:padding="@dimen/padding_medium"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_message"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/on_background"
            android:gravity="center"
            android:layout_marginBottom="@dimen/margin_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/selectModeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_game" />

    </LinearLayout>

    <TextView
        android:id="@+id/turnIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:textColor="@color/on_background"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/welcomeContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/boardCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_large"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/corner_radius"
        app:cardElevation="@dimen/elevation"
        app:cardBackgroundColor="@color/surface"
        app:layout_constraintTop_toBottomOf="@id/turnIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.9">

        <GridLayout
            android:id="@+id/gameBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:layout_gravity="center"
            android:padding="@dimen/padding_medium">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell00"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell01"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell02"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell10"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell11"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell12"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell20"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell21"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cell22"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="@dimen/cell_size"
                android:layout_height="@dimen/cell_size"
                android:textSize="36sp"
                android:textStyle="bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetLeft="0dp"
                android:insetRight="0dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:backgroundTint="@color/cell_background"
                app:cornerRadius="0dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/grid_line" />

        </GridLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:layout_marginTop="@dimen/margin_large"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/boardCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeModeButton"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_mode"
        android:layout_marginTop="@dimen/margin_medium"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/resetButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

